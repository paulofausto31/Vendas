<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="455dp" >

        <TextView
            android:id="@+id/lblEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Nome" />

        <EditText
            android:id="@+id/txtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lblEmpresa"
            android:editable="false"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/txtEstoque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtCPFCNPJ"
            android:text="Endereço                              " />

        <EditText
            android:id="@+id/txtEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtEstoque"
            android:editable="false"
            android:ems="10" />

        <TextView
            android:id="@+id/txtLoHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtEndereco"
            android:text="Última Compra" />

        <EditText
            android:id="@+id/txtUltimaCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/txtEstoque"
            android:layout_below="@+id/txtLoHora"
            android:editable="false"
            android:ems="10" />

        <TextView
            android:id="@+id/txtLoVend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txtLoHora"
            android:layout_below="@+id/txtUltimaCompra"
            android:text="Valor A Vencer" />

        <EditText
            android:id="@+id/txtAvencer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/txtLoVend"
            android:layout_below="@+id/txtLoVend"
            android:editable="false"
            android:ems="10" />

        <TextView
            android:id="@+id/txtLoGPS1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtLoVend"
            android:layout_alignBottom="@+id/txtLoVend"
            android:layout_centerHorizontal="true"
            android:text="Valor Vencido" />

        <EditText
            android:id="@+id/txtVencido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtAvencer"
            android:layout_alignBottom="@+id/txtAvencer"
            android:layout_alignLeft="@+id/txtLoGPS1"
            android:layout_alignRight="@+id/txtLoGPS1"
            android:editable="false"
            android:ems="10" />

        <TextView
            android:id="@+id/txtLoGPS2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUltimaCompra"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/txtLoGPS1"
            android:text="Forma Pgto" />

        <EditText
            android:id="@+id/txtFormaPgto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtLoGPS2"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtLoGPS2"
            android:editable="false"
            android:ems="10" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtAvencer"
            android:text="Telefone" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAvencer"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="261dp"
            android:layout_marginTop="0dp"
            android:text="Limite Crédito" />

        <EditText
            android:id="@+id/txtTelefone"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="147dp"
            android:editable="false"
            android:ems="10" />

        <EditText
            android:id="@+id/txtLimiteCredito"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="6dp"
            android:editable="false"
            android:ems="10" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtNome"            
            android:text="CPF/CNPJ" />

        <EditText
            android:id="@+id/txtCPFCNPJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/txtEstoque"
            android:layout_below="@+id/textView8"
            android:editable="false"
            android:ems="10" />

        <TextView
            android:id="@+id/txtFPgto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txtLoGPS1"
            android:layout_below="@+id/txtNome"
            android:text="Bairro" />

        <EditText
            android:id="@+id/txtBairro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtCPFCNPJ"
            android:layout_alignBottom="@+id/txtCPFCNPJ"
            android:layout_alignLeft="@+id/txtFPgto"
            android:ems="10" />

        <EditText
            android:id="@+id/txtCidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtBairro"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtLoHora"
            android:ems="10" />

        <TextView
            android:id="@+id/txtLoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtCidade"
            android:layout_alignLeft="@+id/txtCidade"
            android:text="Cidade" />
        
    </RelativeLayout>
    

</ScrollView>