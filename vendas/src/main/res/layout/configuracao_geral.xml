<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/lblEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Caminho FTP local" />

    <EditText
        android:id="@+id/txtCaminhoFtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblEmpresa"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txtEstoque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtCaminhoFtp"
        android:text="CNPJ da Empresa" />

    <EditText
        android:id="@+id/txtCodigoEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtEstoque"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtLoHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCodigoEmpresa"
        android:layout_alignParentLeft="true"
        android:text="Email da empresa" />

    <EditText
        android:id="@+id/txtEmailEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtLoHora"
        android:ems="10" />

    <TextView
        android:id="@+id/txtLoVend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtEmailEmpresa"
        android:text="Porta FTP" />

    <EditText
        android:id="@+id/txtPortaFtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/txtCodigoEmpresa"
        android:layout_below="@+id/txtLoVend"
        android:ems="10" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtPortaFtp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txtPortaFtp"
            android:layout_toRightOf="@+id/txtLoHora"
            android:text="Salvar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnConfiguracaoPrincipal"
            android:layout_width="384dp"
            android:layout_height="55dp"
            android:layout_marginTop="276dp"
            android:text="Voltar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>